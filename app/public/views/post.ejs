<script>
	$('#postdate').text(moment('<%- data.date %>').format('DD-MM-YYYY'));
	$('#copy-to-clip').tooltip({
		disabled: true,
		close: function (event, ui) {
			$(this).tooltip('disable');
		},
	});

	$('#copy-to-clip').on('click', function () {
		$(this).tooltip('enable').tooltip('open');
	});
</script>
<script>
	function copyURL() {
		console.log('copy..');
		var dummy = document.createElement('input'),
			text = window.location.href;

		document.body.appendChild(dummy);
		dummy.value = text;
		dummy.select();
		document.execCommand('copy');
		document.body.removeChild(dummy);
	}
</script>
<script src="/assets/js/jssocials.min.js"></script>
<script>
	$('#share').jsSocials({
		showLabel: false,
		showCount: false,
		shares: [
			{
				share: 'facebook',
				logo: '/assets/images/icon/fs.png',
			},
			{
				share: 'twitter',
				logo: '/assets/images/icon/ts.png',
			},
		],
	});
</script>
<script>
	function lineShare() {
		window.open(
			'https://social-plugins.line.me/lineit/share?url='.concat(
				window.location.href
			)
		);
	}
</script>
