<!-- #PostSection -->
<section style="border-top: 5px solid green;">
	<div class="container my-3">
		<div class="row">
			<div class="post-header">
				<small style="font-weight: bold;"><%- title.split('-')[1] %> </small>
				<h1><%- data.title %></h1>
				<div><%- data.desc %></div>
				<small>29-06-2020</small>
			</div>
		</div>
		<div class="row align-items-center my-4"
			style="color: rgb(102, 102, 102); border-bottom: 1px solid rgb(102, 102, 102);">
			<div style="padding-right: 1em; font-weight: bold;">SHARE</div>
			<div id="share" style="margin-right: 0.6em;"></div>
			<div id="copy-to-clip" title="คัดลอกไปยังคลิปบอร์ดแล้ว" onclick="copyURL()"><i class="fa fa-link"></i></div>
		</div>
		<div class="row"
			style="background-image: url(/upload/<%-data.imgPath%>); background-repeat: no-repeat; background-size: cover;">
			<div style="height: 70vh;"></div>
		</div>
		<div class="row d-flex flex-row-reverse">
			<div class="col-sm-12 col-md-12 px-0">
				<p><%- data.body %></p>
			</div>
			<!-- <div class="col-md-2 col-sm-4">
				<div>
					<p>Written by</p>
					<p></p>
				</div>
			</div> -->
		</div>
	</div>
</section>

