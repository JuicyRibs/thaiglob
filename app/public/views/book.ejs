<%- include('./includes/header.ejs') %>

<!-- #Cover -->
<div class="cover book">
	<div class="row" style="height: 100%;">
		<div class="my-auto innerText">
			<div class="covertitle">
				Publication
				<p class="cloud">
					หนังสือและสิ่งพิมพ์
				</p>
			</div>
		</div>
	</div>
</div>
<!-- EndCover -->

<div class="container">
	<div class="row my-3">
		<div class="col-6">
			<p>
				<a href="/" style="text-decoration: none; color: black;">Home</a>
				>
				<span>
					<a href="/knowledge-corner" style="text-decoration: none; color: black;">Knowledge Corner</a>
				</span>
				>
				<span>
					<a href="/publication" style="text-decoration: none; color: #28a745;">Publication</a>
				</span>
			</p>
		</div>
		<div class="col-6">
			<form class="row">
				<input class="form-control mx-3" type="search" placeholder="Search By Keyword" aria-label="Search"
					name="search" style="width: 80%;" />
				<button class="btn btn-outline-success my-2 my-sm-0" type="submit">
					Filter
				</button>
			</form>
		</div>
	</div>
</div>

<!-- #Pinned Book -->
<% if (!Array.isArray(books) || !books.length) { %>
<section style="height: 75vh;">
	<div class="row cloud" style="height: 100%;">
		<div class="my-auto mx-auto text-center">
			<div style="font-size: 2em;">
				ไม่พบหนังสือที่ท่านต้องการ
			</div>
			<br />
			<div style="font-size: 1.5em;">
				The book you're looking for is not available
			</div>
			<button class="btn btn-success mt-4" onclick="window.location.href='/publication'">
				ย้อนกลับ
			</button>
		</div>
	</div>
</section>
<% }else {%>
<!-- #BookList -->
<section class="mt-5">
	<div class="container">
		<div class="row">
			<% for(book of books){ %>
			<div class="col-lg-4 col-md-6 py-4 px-5 booklist">
				<img src="<%- (book.imgPath)?book.imgPath:'/assets/images/examplebook.jpg' %>" />
				<div class="cloud"><%- book.id %></div>
				<small class="date"><i class="fa fa-clock-o"></i>&nbsp; 05-04-2012</small>
			</div>
			<% } %>
		</div>
		<button class="btn btn-outline-dark cloud my-4 px-5" style="width: 100%;">
			แสดงเพิ่มเติม <i class="fa fa-caret-down"></i>
		</button>
	</div>
</section>
<!-- #EndBookList -->
<% } %>


<!-- #End Pagination -->
<%- include('./includes/footer.ejs') %>