<%- include('./includes/header.ejs') %>

<!-- #Cover -->
<div class="cover article">
	<div class="row" style="height: 100%;">
		<div class="my-auto innerText">
			<div class="covertitle">
				Articles and Infographics
				<p class="cloud">
					บทความและอินโฟกราฟฟิก
				</p>
			</div>
		</div>
	</div>
</div>

<!-- #EndCover -->

<div class="container">
	<div class="row my-3">
		<div class="col-6">
			<p>
				<a href="/" style="text-decoration: none; color: black;">Home</a>
				>
				<span>
					<a href="/knowledge-corner" style="text-decoration: none; color: black;">Knowledge Corner</a>
				</span>
				>
				<span>
					<a href="/articles" style="text-decoration: none; color: #28a745;">Articles and Infographics
					</a>
				</span>
			</p>
		</div>
		<div class="col-6">
			<form class="row">
				<input class="form-control mx-3" type="search" placeholder="Search By Keyword" aria-label="Search"
					name="search" style="width: 80%;" />
				<button class="btn btn-outline-success my-2 my-sm-0" type="submit">
					Filter
				</button>
			</form>
		</div>
	</div>
</div>

<!-- #NewsBlock -->
<% if (!Array.isArray(posts) || !posts.length) { %>
<section style="height: 75vh;">
	<div class="row cloud" style="height: 100%;">
		<div class="my-auto mx-auto text-center">
			<div style="font-size: 2em;">
				ไม่พบบทความที่ท่านต้องการ
			</div>
			<br />
			<div style="font-size: 1.5em;">
				The article you're looking for is not available
			</div>
			<button class="btn btn-success mt-4" onclick="window.location.href='/articles'">
				ย้อนกลับ
			</button>
		</div>
	</div>
</section>
<% }else {%>
<section>
	<div class="container">
		<div class="row">
			<% for(post of posts) {%>
			<div class="col-lg-4 col-md-6 py-4 px-5 booklist">
				<a href="post/<%- post.id %> " class="postblock" style="text-decoration: none;">
					<!-- <img src="<%- (post.imgPath)?post.imgPath:'/assets/images/demoarticle.jpg' %>" /> -->
					<img src="../assets/images/demoarticle.jpg">
					<div class="cloud"><%- post.title %></div>
					<small class="date"><i class="fa fa-clock-o"></i>&nbsp; 05-04-2012</small>
				</a>
			</div>
			<% } %>
		</div>
		<button class="btn btn-outline-dark cloud my-4 px-5" style="width: 100%;">
			แสดงเพิ่มเติม <i class="fa fa-caret-down"></i>
		</button>
	</div>
</section>
<% } %>
<!-- #EndNewsBlock -->

<%- include('./includes/footer.ejs')%>