<%- include('./includes/header.ejs') %>

<!-- #Cover -->
<section class="cover research">
	<div class="container">
		<div class="row py-5 text-center">
			<div class="col">
				<h1>Research</h1>
				<p>Our research database</p>
			</div>
		</div>
	</div>
</section>
<!-- #EndCover -->

<!-- #Table -->
<section>
	<div class="container">
		<table class="table" id="table_id">
			<thead>
				<tr>
					<th scope="col">No.</th>
					<th scope="col">Title</th>
					<th scope="col">PI</th>
					<th scope="col">Institute</th>
					<th scope="col">Active Year</th>
					<th scope="col">Fund Source</th>
					<th scope="col">Status</th>
					<th scope="col">Download</th>
				</tr>
			</thead>
			<tbody>
				<% for([index, research] of researches.entries()) {%>
				<tr>
					<th scope="row"><%- index %></th>
					<td>
						<%- research.title %>
					</td>
					<td><%- research.author %></td>
					<td><%- research.institute %></td>
					<td><%- research.activeYear %></td>
					<td><%- research.fundSource %></td>
					<td><%- research.status %></td>
					<td>
						<a href="<%- research.dlPath %>" download>
							<i
								class="fa fa-cloud-download"
								style="color: black;"
							></i
						></a>
					</td>
				</tr>
				<% } %>
			</tbody>
		</table>
	</div>
</section>
<!-- #EndTable -->
<!-- #StartPagination -->
<script
	type="text/javascript"
	charset="utf8"
	src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"
></script>

<script>
	$(document).ready(function() {
		$('#table_id').dataTable();
	});
</script>
<!-- #EndPagination -->
<%- include('./includes/footer.ejs') %>
